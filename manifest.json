{
  "manifest_version": 3,
  "name": "ES Utils",
  "version": "1.0.0",
  "description": "A collection of useful utilities including image download and copy link features",
  "permissions": ["storage", "activeTab", "downloads", "contextMenus"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icons/icon16.png",
      "32": "assets/icons/icon32.png",
      "48": "assets/icons/icon48.png",
      "128": "assets/icons/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icons/icon16.png",
    "32": "assets/icons/icon32.png",
    "48": "assets/icons/icon48.png",
    "128": "assets/icons/icon128.png"
  },
  "background": {
    "service_worker": "background/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": ["inject/fallback.js"],
      "run_at": "document_start",
      "all_frames": true,
      "match_about_blank": true
    },
    {
      "matches": ["http://*/*", "https://*/*", "file:///*"],
      "js": [
        "utils/utils.js",
        "inject/config.js",
        "inject/theme-engine.js",
        "inject/theme-manager.js",
        "content/content-url-utils.js",
        "content/content-observers.js",
        "content/content-buttons.js",
        "content/content-main.js"
      ],
      "css": ["content/content.css"],
      "run_at": "document_end",
      "all_frames": true,
      "match_about_blank": true
    }
  ]
}
